# Banco de dados PostgreSQL
POSTGRES_DB=zapon
POSTGRES_USER=zapon
POSTGRES_PASSWORD=zapon
POSTGRES_PORT=5432
DB_PORT=5432

# Aplicação (backend)
NODE_ENV=production
TZ=America/Sao_Paulo
